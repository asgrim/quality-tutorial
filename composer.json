{
    "name": "asgrim/quality-tutorial",
    "description": "Sample code and exercises for my quality PHP workshop",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "ext-xdebug": "*",
        "beberlei/assert": "^3.2",
        "ramsey/uuid": "^3.8",
        "symfony/process": "^4.3"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.3",
        "behat/mink-selenium2-driver": "^1.3",
        "infection/infection": "^0.14.1",
        "php-mock/php-mock": "^2.1",
        "phpstan/phpstan": "^0.11.16",
        "phpunit/phpunit": "^8.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.6"
    },
    "suggest": {
        "ext-uopz": "If you want to run the 5-testing-legacy-code exercise, you need uopz extension"
    },
    "autoload": {
        "psr-4": {
            "Asgrim\\": "src/",
            "Exercises\\One\\": "exercises/1-object-calisthenics",
            "Exercises\\Two\\": "exercises/2-leveraging-types",
            "Exercises\\Three\\": "exercises/3-simple-domain-implementation",
            "Exercises\\Four\\": "exercises/4-phpstan",
            "Exercises\\Five\\": "exercises/5-testing-legacy-code/src",
            "Exercises\\Six\\": "exercises/6-branch-coverage",
            "Exercises\\Eight\\": "exercises/8-infection/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AsgrimUnitTest\\": "test/unit",
            "AsgrimBehaviourTest\\": "features/bootstrap",
            "ExercisesTest\\Five\\": "exercises/5-testing-legacy-code/test",
            "ExercisesTest\\Eight\\": "exercises/8-infection/test"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
