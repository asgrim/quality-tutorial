{
    "name": "asgrim/quality-tutorial",
    "description": "Sample code and exercises for my quality PHP workshop",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ramsey/uuid": "^3.7",
        "beberlei/assert": "^2.9"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.9.2",
        "infection/infection": "^0.8.1",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.3",
        "behat/mink-selenium2-driver": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Asgrim\\": "src/",
            "Exercises\\One\\": "exercises/1-object-calisthenics",
            "Exercises\\Two\\": "exercises/2-leveraging-types",
            "Exercises\\Three\\": "exercises/3-simple-domain-implementation",
            "Exercises\\Four\\": "exercises/4-phpstan",
            "Exercises\\Five\\": "exercises/5-testing-legacy-code",
            "Exercises\\Six\\": "exercises/6-branch-coverage",
            "Exercises\\Seven\\": "exercises/7-coverage-leaking",
            "Exercises\\Eight\\": "exercises/8-infection/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AsgrimUnitTest\\": "test/unit",
            "AsgrimBehaviourTest\\": "features/bootstrap",
            "ExercisesTest\\Eight\\": "exercises/8-infection/test"
        }
    }
}
